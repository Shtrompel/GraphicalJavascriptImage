<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/palette_a_vanilla_ice"
        tools:context=".ActivityAbout">


        <ImageView
            android:id="@+id/imageView2"
            android:contentDescription="@string/hamoud_habibi_description"
            android:layout_width="210dp"
            android:layout_height="144dp"
            android:layout_margin="@dimen/default_margin"
            app:srcCompat="@drawable/hamoud_habibi" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bigger_margin"
            android:background="@drawable/main_buttons_background">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:textSize="25sp"
                android:scaleType="centerCrop"
                android:textColor="@color/palette_a_vanilla_ice"
                android:text="@string/about_string" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>