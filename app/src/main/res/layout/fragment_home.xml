<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gradient_background_main"
        tools:context=".ActivityMain"
        tools:openDrawer="start">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgMainLogo"
            android:layout_width="285dp"
            android:layout_height="272dp"
            android:layout_margin="@dimen/default_margin"
            android:contentDescription="@string/logo_image"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_height="300dp"
            android:layout_width="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/main_buttons_background"
            >

            <Button
                android:id="@+id/btnMainResume"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_pink_swan"
                android:background="@color/palette_a_vanilla_ice"
                android:text="@string/resume" />

            <Button
                android:id="@+id/btnMainCreateNew"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_oxford_blue"
                android:background="@color/palette_a_vanilla_ice"
                android:text="@string/btn_main_create_new" />

            <Button
                android:id="@+id/btnOpenGallery"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_oxford_blue"
                android:background="@color/palette_a_vanilla_ice"
                android:text="@string/btn_main_open_gallery" />

            <Button
                android:id="@+id/btnMainExit"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_oxford_blue"
                android:background="@color/palette_a_vanilla_ice"
                android:text="@string/exit" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>