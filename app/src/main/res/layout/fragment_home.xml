<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gradient_background_main"
        tools:context=".ActivityMain"
        android:id="@+id/activity_main"
        tools:openDrawer="start">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="227dp"
            android:layout_height="221dp"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/hamoud_habibi" />

        <LinearLayout
            android:layout_height="300dp"
            android:layout_width="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/main_buttons_background"
            >

            <Button
                android:id="@+id/btnMainResume"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_pink_swan"
                android:background="@color/palette_a_vanilla_ice"
                android:text="Resume" />

            <Button
                android:id="@+id/btnMainCreateNew"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_oxford_blue"
                android:background="@color/palette_a_vanilla_ice"
                android:text="Create New Project" />

            <Button
                android:id="@+id/btnOpenGallery"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_oxford_blue"
                android:background="@color/palette_a_vanilla_ice"
                android:text="Open Gallery" />

            <Button
                android:id="@+id/btnMainExit"
                android:layout_width="@dimen/default_button_width"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="@dimen/default_margin"
                android:textColor="@color/palette_a_oxford_blue"
                android:background="@color/palette_a_vanilla_ice"
                android:text="Exit" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>