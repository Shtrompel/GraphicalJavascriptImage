<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="300dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp"
    style="?android:attr/buttonBarStyle">

    <EditText
        android:id="@+id/etProjectSettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/project_project_title_edit_text"
        android:autofillHints=""
        android:inputType="text" />

    <EditText
        android:id="@+id/etProjectSettingsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minLines="5"
        android:maxLength="1024"
        android:hint="@string/project_project_description_edit_text"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:autofillHints="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        >

        <Button
            android:id="@+id/btnProjectSettingsCancel"
            android:text="@string/project_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/btnProjectSettingsSave"
            android:text="@string/project_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>


</LinearLayout>
